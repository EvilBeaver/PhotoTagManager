<Window x:Class="PhotoTagManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PhotoTagManager"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="102*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Label>Folder:</Label>
            <TextBox Margin="80,2,5,2" Name="txtPath"></TextBox>
            <StackPanel Grid.Column="1" Margin="3" Orientation="Horizontal">
                <Button Click="Button_Click" Content="Scan" Height="24"/>
                <Button Click="Button_Click_1">Save</Button>
            </StackPanel>

        </Grid>
        
        <local:PhotoView x:Name="mainView" Grid.Row="1">
            
        </local:PhotoView>
        
    </Grid>
</Window>
