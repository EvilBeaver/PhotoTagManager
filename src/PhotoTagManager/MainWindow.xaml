<Window x:Class="PhotoTagManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PhotoTagManager"
        xmlns:vm="clr-namespace:PhotoTagManager.ViewModel"
        Title="Photo Tag Manager" Height="576.866" Width="716.045" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="87"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File"/>
            <MenuItem Header="Tools"/>
        </Menu>
        
        <!--content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="181*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="517*"/>
            </Grid.ColumnDefinitions>

            <TreeView Grid.Column="0" ItemsSource="{Binding Streams}">
                
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}" DataType="{x:Type vm:ImageStreamViewModel}">
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <Image Source="{Binding Icon}"/>
                            <TextBlock Text="{Binding Header}" Margin="3,0,0,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                
            </TreeView>
            
            <GridSplitter Grid.Column="1"/>
        </Grid>
        
        
        <GridSplitter Grid.Row="2"/>
        <!--thumbnails ribbon-->
        <Grid Grid.Row="3">
            
        </Grid>

    </Grid>
</Window>
