<Window x:Class="BeaverSoft.Common.Updates.UpdatesWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Доступные обновления"  Width="552.632" ShowInTaskbar="False" Style="{StaticResource WindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox IsReadOnly="True" x:Name="txtData" Grid.Row="0" Padding="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            
        </TextBox>
        
        <Button 
            HorizontalAlignment="Right" 
            Margin="5" 
            Grid.Row="1" 
            x:Name="btnLoad" 
            Click="btnLoad_Click" 
            Padding="10"
            MinHeight="25" MinWidth="137">Загрузить обновление</Button>
        
    </Grid>
</Window>
